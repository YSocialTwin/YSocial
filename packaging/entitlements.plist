<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow loading of unsigned libraries and frameworks -->
    <!-- This is necessary for PyInstaller single-file executables -->
    <!-- that extract and load dynamic libraries at runtime -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow loading of dynamically linked libraries -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Disable library validation for ad-hoc signed apps -->
    <!-- This allows the app to load its own extracted libraries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow JITT (Just-In-Time compilation) for Python runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- File system access entitlements for creating experiments and managing files -->
    <!-- Allow read/write access to user-selected files and folders -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow read/write access to Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow read/write access to entire file system (required for experiment creation) -->
    <!-- This is needed because experiments are created in the app's working directory -->
    <key>com.apple.security.files.all</key>
    <string>read-write</string>
    
    <!-- Disable App Sandbox to allow broader file system access -->
    <!-- This is necessary for creating experiment directories and files -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Network access for LLM backends and external services -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <key>com.apple.security.network.server</key>
    <true/>
</dict>
</plist>
